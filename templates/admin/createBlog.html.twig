{% extends ['admin/main.html.twig'] %}



{% block body %}
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--begin::Card-->
                <div class="card card-custom gutter-b example example-compact">
                    <div class="card-header">
                        <h3 class="card-title">Add new status</h3>
                        <div class="card-toolbar">
                            <div class="example-tools justify-content-center">
                                <span class="example-toggle" data-toggle="tooltip" title="" data-original-title="View code"></span>
                                <span class="example-copy" data-toggle="tooltip" title="" data-original-title="Copy code"></span>
                            </div>
                        </div>
                    </div>
                    <!--begin::Form-->
                     {{ form_start(form) }}
                    <form class="form" >
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <label>Title blog:</label>
                                   
                                    {{ form_widget(form.title,{
                                    'attr':{
                                        'class':'form-control',
                                        'placeholder': 'How to become a best council?'
                                    }
                                    }) }}
                                    <span class="form-text text-muted">Please fill in music name</span>
                                    {# <app-error-message [control]="createSongForms.get('txtMusicName')" [controlName]="'Music Name'"></app-error-message> #}
                                </div>
                                {# <div class="col-lg-6">
                                    <label>Photo:</label>
                                    <input formControlName="txtPhoto"  type="text" class="form-control" placeholder="httpss://example.com/we-dont-talk-anymore.png">
                                    <span class="form-text text-muted">Please enter image has https:// and .png/jpg/jpeg</span>
                                
                                </div> #}
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <label>Content:</label>
                                    <div class="input-group">
                                        {# <input  type="text" class="form-control" placeholder="httpss://example.com/we-dont-talk-anymore.mp3"> #}
                                        {{ form_widget(form.content,{
                                        'attr':{
                                            'class':'form-control',
                                            'placeholder': 'Task name'
                                        }
                                        }) }}
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-map-marker"></i>
                                            </span>
                                        </div>
                                    </div>
                                    {# <app-error-message [control]="createSongForms.get('txtURL')" [controlName]="'URL'"></app-error-message> #}
                                </div>
                                <div class="col-lg-6">
                                    <label>Category:</label>
                                    <div class="input-group">
                                   {# {{ form_widget(form.categoryId,{
                                        'option':{
                                            'select':
                                        }
                                        }) }} #}
                                        <select formControlName="slArtist" name="" id="" class="form-control">
                                            <option></option>
                                        </select>
                                        
                                       
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-language"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <span class="form-text text-muted">Wee need to sure have only characters in alphabet</span>
                                    {# <app-error-message [control]="createSongForms.get('slArtist')" [controlName]="'Artist'"></app-error-message> #}
                                </div>
                            </div>
                            
                            <!-- begin: Example Code-->
                            
                            <!-- end: Example Code-->
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-lg-6">
                                    <button type="submit" name="create_content" class="btn btn-primary mr-2">Save</button>
                                    <button type="reset" class="btn btn-secondary">Cancel</button>
                                </div>
                               
                            </div>
                        </div>
                    </form>
                    {{ form_end(form) }}
                    <!--end::Form-->
                </div>
                <!--end::Card-->
               
            </div>
        </div>
    </div>
    <!--end::Container-->
</div>
{% endblock %}